@model AdventureWorks2014.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BusinessEntityId" />

            <div class="form-group">
                <label asp-for="BusinessEntityId" class="control-label"></label>
                <input asp-for="BusinessEntityId" class="form-control" readonly="readonly" />
                <span asp-validation-for="BusinessEntityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Person.FirstName" class="control-label"></label>
                <input asp-for="Person.FirstName" class="form-control" readonly="readonly" />
                <span asp-validation-for="Person.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Person.MiddleName" class="control-label"></label>
                <input asp-for="Person.MiddleName" class="form-control" readonly="readonly" />
                <span asp-validation-for="Person.MiddleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Person.LastName" class="control-label"></label>
                <input asp-for="Person.LastName" class="form-control" readonly="readonly" />
                <span asp-validation-for="Person.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" readonly="readonly" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NationalIdnumber" class="control-label"></label>
                <input asp-for="NationalIdnumber" class="form-control" readonly="readonly" />
                <span asp-validation-for="NationalIdnumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginId" class="control-label"></label>
                <input asp-for="LoginId" class="form-control" readonly="readonly" />
                <span asp-validation-for="LoginId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Person.EmailAddress" class="control-label"></label>
                <input asp-for="Person.EmailAddress.Email_Address" class="form-control" readonly="readonly" />
                <span asp-validation-for="Person.EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Department</label>
                @foreach (var x in Model.EmployeeDepartmentHistory)
                {
                    <input asp-for="@x.Department.Name" class="form-control col-12" readonly="readonly" />

                    <p class="form-control col-12" readonly="readonly">@x.StartDate.Date.ToShortDateString()</p>
                    if (x.EndDate != null)
                    {
                        <p class="form-control col-12" readonly="readonly">@x.EndDate.Value</p>
                    }
                    else
                    {
                        <p>null</p>
                    }

                }

            </div>

            <div class="form-group">
                <label asp-for="OrganizationLevel" class="control-label"></label>
                <input asp-for="OrganizationLevel" class="form-control" readonly="readonly" />
                <span asp-validation-for="OrganizationLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" readonly="readonly" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaritalStatus" class="control-label"></label>
                <input asp-for="MaritalStatus" class="form-control" readonly="readonly" />
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HireDate" class="control-label"></label>
                <input asp-for="HireDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalariedFlag" class="control-label"></label>
                <input asp-for="SalariedFlag" class="form-control" readonly="readonly" />
                <span asp-validation-for="SalariedFlag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationHours" class="control-label"></label>
                <input asp-for="VacationHours" class="form-control" readonly="readonly" />
                <span asp-validation-for="VacationHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SickLeaveHours" class="control-label"></label>
                <input asp-for="SickLeaveHours" class="form-control" readonly="readonly" />
                <span asp-validation-for="SickLeaveHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentFlag" class="control-label"></label>
                <input asp-for="CurrentFlag" class="form-control" readonly="readonly" />
                <span asp-validation-for="CurrentFlag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rowguid" class="control-label"></label>
                <input asp-for="Rowguid" class="form-control" readonly="readonly" />
                <span asp-validation-for="Rowguid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedDate" class="control-label"></label>
                <input asp-for="ModifiedDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.BusinessEntityId" class="btn btn-warning">Edit</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
